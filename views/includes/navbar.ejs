<style>
  .search-btn {
    background-color: #111fa1;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #111fa1;
    color: white;
  }

  .search-btn i {
    display: inline;
    margin-left: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
  }
  .navbar-toggler {
  border: 1px solid #333;
  background-color: black; 
  color: black !important;
}


  @media (max-width: 768px) {
    .navbar-collapse {
      background-color:rgb(49, 47, 47);
      padding: 1.5rem 1rem;
      border-radius: 1rem;
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
    }

    .navbar-collapse .nav-link,
    .navbar-collapse .btn,
    .navbar-collapse input {
      color: white !important;
    }

    .navbar-collapse .nav-link {
      margin: 0.5rem 0;
      font-size: 1.1rem;
    }

    .navbar-collapse .form-control {
      background-color: #222;
      color: white;
      border: 1px solid #555;
    }

    .navbar-collapse .form-control::placeholder {
      color: #aaa;
    }

    .navbar-toggler {
      border: none;
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='white' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" method="GET" action="/listings/search">
          <input class="form-control me-2 search-inp" type="search" name="q" placeholder="Search by country or location" />
          <button class="btn search-btn" type="submit">
            Search <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">List your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
